= javascript_include_tag 'Colour'
= javascript_include_tag 'colours'
= javascript_include_tag 'pixel'
= javascript_include_tag 'underscore'
= stylesheet_link_tag 'user'
= partial :locales

.my-unit
  %h2 Random Pixel Art
  %p
.my-unit
  %h4
    #refresh_colours.btn
      %i.icon-refresh
    = I18n.t :colours
  .row
    .col-5
      %form.form-horizontal
        .form-group
          %label= I18n.t :n_colours
          = number_field_tag :n_colours, min: 1, class: 'col-4 form-control'
        .form-group
          %label= I18n.t :colour_space
          .form-control
            %label.radio
              = radio_button_tag :colour_type, value: 'RGBColour', checked: true
              RGB
            %label.radio
              = radio_button_tag :colour_type, value: 'HSLColour'
              HSL
            %label.radio
              = radio_button_tag :colour_type, value: 'HSVColour'
              HSV
        .form-group
          %label#colour_label_0
          .form-control
            = input_tag :range, id: :colour_0, class: :form_control_range
        .form-group
          %label#colour_label_1
          .form-control
            = input_tag :range, id: :colour_1, class: :form_control_range
        .form-group
          %label#colour_label_2
          .form-control
            = input_tag :range, id: :colour_2, class: :form_control_range
        .form-group
          %label= I18n.t :colour_distance
          .form-control
            = input_tag :range, id: :colour_distance, class: :form_control_range
    .col-1
    .col-4
      %canvas#colours_canvas{style: 'display:none'}
      %img#colours_img
.my-unit
  %h4
    #refresh.btn
      %i.icon-refresh
    = I18n.t :picture
  .row
    .col-5
      %form.form-horizontal
        .form-group
          %label= I18n.t :pixel_size
          .form-control
            = number_field_tag :dx, min: 1, class: 'col-1', value: 20
            x
            = number_field_tag :dy, min: 1, class: 'col-1', value: 20
        .form-group
          %label= I18n.t :size
          .form-control
            = number_field_tag :nx, min: 1, class: 'col-1', value: 10
            x
            = number_field_tag :ny, min: 1, class: 'col-1', value: 10
    .col-5
      %form.form
        .form-group
          %label= I18n.t :neighbour_distance
          .form-control
            = input_tag :range, id: :neighbour_distance, class: :form_control_range
  .row
    .col
      %canvas#image_canvas{style: 'display:none'}
      %img#image_img{alt: "#{I18n.t :right_click_to_save_me}"}
  .row
    .col
      //#json
